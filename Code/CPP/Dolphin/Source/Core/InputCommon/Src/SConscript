# -*- python -*-

Import('env')

files = [
	'Configuration.cpp',
	'EventHandler.cpp',
	'InputCommon.cpp',
	'SDL_Util.cpp',
	]

if env['HAVE_X11']:
	files += [
		"X11InputBase.cpp",
		]

if env['HAVE_WX']:
	files += [
		"WXInputBase.cpp",
		]

env_inputcommon = env.Clone()
env_inputcommon.Append(CXXFLAGS = [ '-fPIC' ])
env_inputcommon.StaticLibrary(env['local_libs'] + "inputcommon", files)
