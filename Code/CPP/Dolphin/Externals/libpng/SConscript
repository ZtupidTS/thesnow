# -*- python -*-

Import('env')
import sys

if env.has_key('shared_png') and env['shared_png']:
	Return()

if env.has_key('HAVE_WX') and env['HAVE_WX']:
	Return()	# Currently using libwxpng

files = [
	'png.c',
	'pngerror.c',
	'pngget.c',
	'pngmem.c',
	'pngpread.c',
	'pngread.c',
	'pngrio.c',
	'pngrtran.c',
	'pngrutil.c',
	'pngset.c',
	'pngtrans.c',
	'pngwio.c',
	'pngwrite.c',
	'pngwtran.c',
	'pngwutil.c',
	]

env['CPPPATH'] += ['#Externals/libpng']
env['LIBS'] += env.StaticLibrary('png', files)
