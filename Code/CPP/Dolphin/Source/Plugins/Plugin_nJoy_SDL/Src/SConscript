# -*- python -*-

Import('env')
import sys

name = "Plugin_nJoy_SDL"
padenv = env.Clone()

if not env['HAVE_SDL']:
    print name + " must have SDL to be build"
    Return()

files = [
	'Config.cpp',
	'nJoy.cpp',
	'Rumble.cpp',
	]
if padenv['HAVE_WX']:
    files += [
        'GUI/AboutBox.cpp',
        'GUI/ConfigAdvanced.cpp',
        'GUI/ConfigJoypad.cpp',
        'GUI/ConfigBox.cpp',
        ]

padenv.Append(
	CXXFLAGS = [ '-fPIC' ],
	LIBS = [ 'common', 'inputcommon' ],
	)

padenv.SharedLibrary(env['plugin_dir']+name, files)
