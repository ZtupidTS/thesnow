# -*- python -*-

Import('env')

if env.has_key('shared_sfml') and env['shared_sfml']:
	Return()

files = [
	'src/SFML/Network/Ftp.cpp',
	'src/SFML/Network/Http.cpp',
	'src/SFML/Network/IPAddress.cpp',
	'src/SFML/Network/Packet.cpp',
