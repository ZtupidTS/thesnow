	'src/SFML/Network/SocketTCP.cpp',
	'src/SFML/Network/SocketUDP.cpp',
	'src/SFML/Network/Unix/SocketHelper.cpp',
	]

env['CPPPATH'] += ['#Externals/SFML/include']
env['LIBS'] += env.StaticLibrary('sfml-network', files)
