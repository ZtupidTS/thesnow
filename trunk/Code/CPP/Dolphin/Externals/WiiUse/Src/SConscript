# -*- python -*-

Import('env')
import sys

files = [
	"ir.c",
	"wiiuse.c",
	]

if sys.platform == 'darwin':
	files += [ "io_osx.m" ]
elif sys.platform == 'linux2' and env['HAVE_BLUEZ']:
	files += [ "io_nix.c" ]
elif sys.platform == 'win32':
	files += [ "io_win.c" ]
else:
	files += [ "io_dummy.c" ]

env.StaticLibrary(env['local_libs'] + "wiiuse", files)
env['CPPPATH'] += ['#Externals/WiiUse/Src']
