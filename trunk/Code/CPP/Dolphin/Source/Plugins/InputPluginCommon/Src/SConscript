# -*- python -*-

Import('env')

files = [
	'Config.cpp',
	'ControllerEmu.cpp',
	'IniFile.cpp',
	]

if env['HAVE_WX']:
	files += [
			'ConfigDiagBitmaps.cpp',
			'ConfigDiag.cpp',
			]



env_inputpc = env.Clone()
env_inputpc.Append(CXXFLAGS = [ '-fPIC' ])
env_inputpc.StaticLibrary(env['local_libs'] + "inputplugincommon", files)
